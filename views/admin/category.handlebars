<h2>category list: </h2>
<hr>
<a href="/admin/category/add"><button class="btn btn-success">new gategory</button></a>

{{#each category}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{{name}}}</h4>
            <small>slug: {{{slug}}}</small><br/>
            <small>Creation data: {{date}}</small><br/>
            <a href="/admin/category/edit/{{_id}}"><button class="btn btn-success mt-4">Edit category</button></a>
        </div>
    </div>
{{else}}

{{/each}}